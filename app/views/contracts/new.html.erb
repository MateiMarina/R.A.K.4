<div class="container">
<nav>
<ul class="breadcrumb">
  <li><%= link_to "Home", static_pages_data_tables_path %></li>
  <li><%= link_to "Add new contract", new_contract_path  %></li>
</ul>
</nav>
<center><h3>Add new contract</h3></center>

<center><font color="red">All fields marked * are required fields</font></center>
<div class="row">
    
  <div class="col-md-8 col-md-offset-3">
     
    
    <br>
      <%= form_for @contract  do |f| %>
      <%#= render 'shared/error_message', object: @contract%>
      <div class="row">
       
       <div class="col-md-6 col-md-offset-2">
         <%= f.label :Contract_name%><font color="red">*</font>
         <%= f.text_field  :contract_name , class: 'form-control' %> 
         
       </div>
       
        <div class="col-md-6 col-md-offset-2">
         <%= f.label :Contract_status%><font color="red">*</font>
         <%= f.text_field  :contract_status, class: 'form-control' %> 
        </div>
        
        
        
        <div class="col-md-6 col-md-offset-2">
         <%= f.label :Country%><font color="red">*</font>
         <%= f.text_field  :country, class: 'form-control' %> 
        </div>

         <div class="col-md-6 col-md-offset-2">
         <%= f.label :Services_rendered%><font color="red">*</font>
         <%= f.text_field  :services_rendered, class: 'form-control' %> 
        </div>
         
         
        <div class="col-md-6 col-md-offset-2">
         <%= f.label :Contract_value%><font color="red">*</font>
         <%= f.text_field  :contract_value, class: 'form-control' %> 
        </div>
        
        <div class="col-md-6 col-md-offset-2">
         <%= f.label :Award_year%><font color="red">*</font>
         <%= f.text_field  :award_year, class: 'form-control' %> 
        </div>
       </div>
       <br>
      <div class="col-md-5 col-md-offset-4">
      <%= f.submit "Add new contract", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  </div>