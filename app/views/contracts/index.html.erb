<div class="container">
<nav>
<ul class="breadcrumb">
  <li><%= link_to "Home",  static_pages_data_tables_path %></li>
    <% if current_user.admin? %>
  <li><%= link_to "Add new contract", new_contract_path  %></li>
    <% end %>
</ul>
</nav>
              
                      
<div class="page-header"><h3>Contract</h3></div>
<div class="span3"> 
<table align="" border="1px"  cellspacing="5px" class="table table-striped">
   <th>Contract name</th>
    <th>Contract Status </th>
     <th>Country</th>
     <th>Services Rendered</th>
     <th>Contract Value</th>
     <th>Award Year</th>
      <% if current_user.admin? %>
        <th>Edit</th>
        <th>Delete</th>
      <% end %>


<% @contract.each do |contract| %>
 
   <tr><td><%=contract.contract_name %></td>
       <td><%=contract.contract_status %></td>
       <td><%=contract.country %></td>
       <td><%=contract.services_rendered %></td>
       <td><%=contract.contract_value %></td>
       <td><%=contract.award_year %></td>

       <% if current_user.admin? %>
<td><%= link_to "Edit", edit_contract_path(contract),data: { confirm: " Are you Sure you want to edit?" }   %></td>
          <td><%= link_to "Delete", contract_path(contract), method: :delete,
          data: { confirm: " Are You sure you want to delete?" } %></td></tr> 
       <% end %>
          
 <% end %>

 </table>
 </div>
 </div>
 </div>