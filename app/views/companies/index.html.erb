<div class="container">
<nav>
<ul class="breadcrumb">
  <li><%= link_to "All data tables",  static_pages_data_tables_path %></li>
  <li><%= link_to "Add new person", new_employee_path  %></li>
</ul>
</nav>
              
                      
<div class="page-header"><h3>Company People</h3></div>
<div class="span3">
<table align="" border="1px" class="table table-striped">
   <th>Company Name</th>
    <th>Company Type</th>
        <th>Edit</th>
           <th>Delete</th>
           
  <% @company.each do |row| %>
 
   <tr><td><%= row.company_name%></td>
         <td><%= row.company_type%></td>
        
          <% if current_user.admin? %>
          <td><%= link_to "Edit", edit_employee_path(row),data: { confirm: " Are you Sure you want to edit?" }   %></td>
          <td><%= link_to "Delete", employee_path(row), method: :delete,
          data: { confirm: " Are You sure you want to Delete?" } %></td></tr>
           <% end %>
 <% end %>
    </table>
</div>
</div>



