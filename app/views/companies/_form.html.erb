 <%= form_for  @company  do |f| %>
      
      <div class="row">
       
       <div class="col-md-6 col-md-offset-2">
         <%= f.label :company_name%><font color="red">*</font>
         <%= f.text_field  :company_name,  class: 'form-control' %><br>
         
       </div>
      
       <div class="col-md-6 col-md-offset-2">
         <%= f.label :company_type%><font color="red">*</font>
         <%= f.select  :company_type, ["Service company", "Operating Company"], class: 'form-control' %> 
         
        </div>
       
       </div>
       <br>
      <div class="col-md-5 col-md-offset-2">
      <%= f.submit "Save", class: "btn btn-primary" %>
      </div>
<% end %>
    
   