<%= form_for  @location  do |f| %>
   

      <div class="row">
       <%= render 'shared/error_message', object: @location%>
       <div class="col-md-6 col-md-offset-2">
         <%= f.label :Country%><font color="red">*</font>
         <%= f.text_field  :country,  class: 'form-control' %> 
         
       </div>
       
       
       <div class="col-md-6 col-md-offset-2">
         <%= f.label :Supra_Region=%><font color="red">*</font>
         <%= f.text_field  :supra_region , class: 'form-control' %> 
         
       </div>
       
        <div class="col-md-6 col-md-offset-2">
         <%= f.label :Region=%><font color="red">*</font>
         <%= f.text_field  :region, class: 'form-control' %> 
         
       </div>
       </div>
       <br>
      <div class="col-md-5 col-md-offset-2">
      <%= f.submit "Save Location", class: "btn btn-primary" %>
      </div>
    <% end %>