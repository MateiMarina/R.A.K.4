<nav>
<ul class="breadcrumb">
  <li><%= link_to "Home",   static_pages_data_tables_path %></li>
  <li><%= link_to "Add new asset", new_item_path  %></li>
</ul>
</nav>
<center><h3>Edit asset</h3></center>

<center><font color="red">All fields marked * are required fields</font></center>
<div class="row">
    
  <div class="col-md-8 col-md-offset-3">
     
    
    <br>
      <%= form_for  @asset  do |f| %>
        <%= render 'shared/error_message', object: @asset%>
      <div class="row">
       
       <div class="col-md-6 col-md-offset-2">
         <%= f.label :Asset_name%><font color="red">*</font>
         <%= f.text_field  :asset_name,  class: 'form-control' %> 
         
       </div>
       
       
       <div class="col-md-6 col-md-offset-2">
         <%= f.label :Asset_type%><font color="red">*</font>
         <%= f.text_field  :asset_type , class: 'form-control' %> 
         
       </div>
       
        <div class="col-md-6 col-md-offset-2">
         <%= f.label :Asset_owner%><font color="red">*</font>
         <%= f.text_field  :asset_owner, class: 'form-control' %> 
         
       </div>
       
       
        <div class="col-md-6 col-md-offset-2">
         <%= f.label :Country%><font color="red">*</font>
         <%= f.text_field  :country, class: 'form-control' %> 
         
       </div>
       
       
       
        <div class="col-md-6 col-md-offset-2">
         <%= f.label :Current_manager%><font color="red">*</font>
         <%= f.text_field  :current_manager, class: 'form-control' %> 
         
       </div>
       
       
        <div class="col-md-6 col-md-offset-2">
         <%= f.label :Previous_manager%><font color="red">*</font>
         <%= f.text_field  :previous_manager, class: 'form-control' %> 
         
       </div>
       
       
        <div class="col-md-6 col-md-offset-2">
         <%= f.label :Asset_specifications%><font color="red">*</font>
         <%= f.text_field  :asset_specifications , class: 'form-control' %> 
         
       </div>
       
       
       </div>
       <br>
      <div class="col-md-5 col-md-offset-4">
      <%= f.submit "Update", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  </div>
  
  

