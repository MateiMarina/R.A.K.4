<!-- View of the QUERY number 7 -->

<FORM><INPUT Type="button" VALUE="Back" onClick="history.go(-1);return true;"></FORM>
<%= form_tag tests_test7_path do %>
  <% if current_user %>
    <h3>Hello <%= current_user.name %>, check which UKCS fields are less than 300m deep:</h3>
    <br>
    <div class="span3">
      <table align="" border="1px" class="table table-striped">
       <th>UK offshore field</th>
       <th>Offshore owner</th>
       <th>Supra region<th>
       <% @fields.each_row() do |item| %>
       <tr><td><%= item[0]  %></td>
       <td><%= item[1]  %></td>
       <td><%= item[2]  %></td>
       <% end %>
      </table>
    </div>
    <% end %>
  <% end %>
